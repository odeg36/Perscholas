<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    
    <entity repository-class="ModelBundle\Entity\TipoCapacitacionRepository" name="ModelBundle\Entity\TipoCapacitacion" table="tipo_capacitacion">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        
        <field name="nombre" type="string" column="nombre" length="150"/>
        
        <field name="slug" type="string" length="150" unique="true">
            <gedmo:slug unique="true" style="lower" updatable="false" separator="_" fields="nombre" />
        </field>
        
        <field name="fechaCreacion" type="datetime" column="fecha_creacion">
            <gedmo:timestampable on="create"/>
        </field>
        
        <field name="fechaActualizacion" type="datetime" column="fecha_actualizacion">
            <gedmo:timestampable on="update"/>
        </field>
        
        <one-to-many field="capacitaciones" target-entity="ModelBundle\Entity\Capacitacion" mapped-by="tipoCapacitacion" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="id" direction="ASC" />
            </order-by>
        </one-to-many>
        
    </entity>
</doctrine-mapping>