<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    
    <entity repository-class="ModelBundle\Entity\ResiduoRepository" name="ModelBundle\Entity\Residuo" table="residuo">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="codigo" type="string" column="codigo" nullable="1" length="150"/>
        <field name="nombre" type="string" column="nombre" length="150"/>
        <field name="slug" type="string" length="150" unique="true">
            <gedmo:slug unique="true" style="lower" updatable="false" separator="_" fields="nombre" />
        </field>
        <field name="densidad" type="float" nullable="1" column="densidad"/>
        <many-to-one field="tipo_residuo" target-entity="ModelBundle\Entity\TipoResiduo" inversed-by="residuos" orphan-removal="true">
            <join-column name="tipo_residuo_id" referenced-column-name="id" on-delete="restrict" on-update="cascade" nullable="1"/>
        </many-to-one>
        <one-to-many field="residuos_recoleccion" target-entity="ModelBundle\Entity\ResiduoRecoleccion" mapped-by="residuo" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="id" direction="ASC" />
            </order-by>
        </one-to-many>
        <field name="fechaCreacion" type="datetime" column="fecha_creacion">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="fechaActualizacion" type="datetime" column="fecha_actualizacion">
            <gedmo:timestampable on="update"/>
        </field>
    </entity>
</doctrine-mapping>