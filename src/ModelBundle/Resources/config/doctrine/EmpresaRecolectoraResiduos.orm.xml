<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    
    <entity repository-class="ModelBundle\Entity\EmpresaRecolectoraResiduosRepository" name="ModelBundle\Entity\EmpresaRecolectoraResiduos" table="empresa_recolectora_residuos">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="nombre" type="string" column="nombre"/>
        <one-to-many field="residuos_recoleccion" target-entity="ModelBundle\Entity\ResiduoRecoleccion" mapped-by="empresa_recolectora_residuos" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="id" direction="ASC" />
            </order-by>
        </one-to-many>
    </entity>
</doctrine-mapping>