{% extends "BackendBundle:Reportes:base_grafica_pdf.html.twig" %}
{% block content %}<div class="col-md-12">
        <div>
            <img src="{{graficaBase64}}" width="100%" height="400">
        </div>
    </div>
    <div class="col-md-12">
        <table align="center" cell style="padding:0 15px 0 15px;">
            <thead>
                <tr>
                    <th align="left">Tipo de residuo</th>
                    <th align="center">Total</th>
                </tr>
            </thead>
            <tbody>
                {%set sumaTotal = 0%}
                {% for tipo in datos %}
                    {%set sumaTotal = sumaTotal+tipo.precio%}
                    <tr>
                        <td width="150">{{tipo.nombre}}</td>
                        <td width="200" align="right">$<span class="peso">{{tipo.precio|number_format(3, ',', '.')}}</span></td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="2"><hr></td>
                </tr>
                <tr>
                    <td width="150">Total</td>
                    <td width="200" align="right">$<span class="peso">{{sumaTotal|number_format(3, ',', '.')}}</span></td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}