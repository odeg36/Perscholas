{% extends "BackendBundle:Reportes:base_grafica_pdf.html.twig" %}
{% block content %}
    <div class="col-md-12">
        <div>
            <img src="{{graficaBase64}}" width="100%" height="400">
        </div>
    </div>
    <div class="col-md-12">
        <table align="center" cell style="padding:0 15px 0 15px;">
            <thead>
                <tr>
                    <th align="left">Residuo</th>
                    <th align="right">Peso en Kg</th>
                </tr>
            </thead>
            <tbody>
                {%set sumaTotal = 0 %}
                {% for residuo in datos %}
                    {%set sumaTotal = sumaTotal+ residuo.peso %}
                    <tr>
                        <td align="left">{{residuo.nombre}}</td>
                        <td align="right"><span class="peso">{{residuo.peso|number_format(3, ',', '.')}}</span></td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="2"><hr></td>
                </tr>
                <tr>
                    <td align="left">Total</td>
                    <td align="right"><span class="peso">{{sumaTotal|number_format(3, ',', '.')}}</span></td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}