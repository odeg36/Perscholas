{% extends "BackendBundle:Reportes:base_grafica_pdf.html.twig" %}
{% block content %}<div class="col-md-12">
        <div>
            <img src="{{graficaBase64}}" width="100%" height="400">
        </div>
    </div>
    <div class="col-md-12">
         <table align="center" cell style="padding:0 15px 0 15px;">
            <thead>
                <tr>
                    <th align="left">Residuo</th>
                    <th align="center">Peso en Kg</th>
                </tr>
            </thead>
            <tbody>
                {% set sumaTotal = 0 %}
                {% for tipo_residuo in datos %}
                    {% set sumaTotal = sumaTotal+ tipo_residuo.peso %}
                    <tr>
                        <td width="150">{{tipo_residuo.nombre}}</td>
                        <td width="200" align="center"><span class="peso">{{tipo_residuo.peso|number_format(3, ',', '.')}}</span></td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="2"><hr></td>
                </tr>
                <tr>
                    <td width="150">Total</td>
                    <td width="200" align="center"><span class="peso">{{sumaTotal|number_format(3, ',', '.')}}</span></td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}