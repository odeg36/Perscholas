{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}

{% block field %}
{% spaceless %}
    {% if value %}
        {% if object.archivoCapacitacion %}
            {% if object.archivoCapacitacion|slice(-4) in ['.png', '.jpg', '.gif', '.bmp', '.tiff', '.jpeg'] %}
            <a href="{{ object.archivoCapacitacion }}" target="_blank" class="imagen"> 
                Ver archivo
            </a>
            {% else %}
            <a href="{{ object.archivoCapacitacion }}" target="_blank" class="popup_documento">
                Ver archivo
            </a>
            {% endif %}
        {% endif %}
    {% else %}
        <span class="label label-danger">No se carg√≥ archivo.</span>
    {% endif %}
{% endspaceless %}
{% endblock %}