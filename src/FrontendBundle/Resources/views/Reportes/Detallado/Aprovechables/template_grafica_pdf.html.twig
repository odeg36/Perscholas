{% extends "BackendBundle:Reportes:base_grafica_pdf.html.twig" %}
{% block content %}
    <div class="col-md-12">
        <div>
            <img src="{{graficaBase64}}" width="100%" height="300">
        </div>
    </div>
    <div class="col-md-12">
        <table width="400" style="border-collapse: collapse;padding:0 15px 0 15px;" border>
            <thead>
                <tr>
                    <th>Tipo de residuo</th>
                    <th>Peso en Kg</th>
                </tr>
            </thead>
            <tbody>
                {% for residuo,cantidad in datos[0] %} 
                    <tr>
                        <td>{{residuo}}</td>
                        <td style="text-align: right"><span class="peso">{{cantidad|number_format(3, ',', '.')}}</span></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}