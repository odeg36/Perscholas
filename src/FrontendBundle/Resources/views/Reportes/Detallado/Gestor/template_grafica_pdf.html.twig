{% extends "BackendBundle:Reportes:base_grafica_pdf.html.twig" %}
{% block content %}
    <div class="col-md-12">
        <div>
            <img src="{{graficaBase64}}" width="100%" height="300">
        </div>
    </div>
    <div class="col-md-12">
        <table width="300"  style="padding:0 15px 0 15px;border-collapse: collapse" border>
            <thead>
                <tr>
                    <th>Residuo</th>
                    <th>Peso en Kg</th>
                </tr>
            </thead>
            <tbody>

                {% for residuo in datos %}
                    <tr>
                        <td>{{residuo.nombre}}</td>
                        <td style="text-align: right"><span class="peso">{{residuo.peso|number_format(3, ',', '.')}}</span></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}