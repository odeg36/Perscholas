{% extends "BackendBundle:Reportes:base_grafica_pdf.html.twig" %}
{% block content %}<div class="col-md-12">
        <div>
            <img src="{{graficaBase64}}" width="100%" height="300">
        </div>
    </div>
    <div class="col-md-12">
        <table align="center" cell style="padding:0 15px 0 15px;">
            <thead>
                <tr>
                    <th>Tipo de residuo</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>

                {% for tipo in datos %}
                    <tr>
                        <td>{{tipo.nombre}}</td>
                        <td style="text-align: right">$<span class="peso">{{tipo.precio|number_format(3, ',', '.')}}</span></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}