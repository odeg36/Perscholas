{% extends "BackendBundle:Reportes:base_grafica_pdf.html.twig" %}
{% set total = 0 %}
{% for disposicion in datos %}
    {% set total = total + disposicion.cantidad %}
{% endfor %}
{% block content %}<div class="col-md-12">
        <div>
            <img src="{{graficaBase64}}" width="100%" height="300">
        </div>
    </div>
    <div class="col-md-12">
        <table align="center" class="table table-bordered" style="width:50%;padding:0 15px 0 15px;">
            <thead>
                <tr>
                    <th>Disposici√≥n</th>
                    <th># de veces utilizada</th>
                    <th>Porcentaje</th>
                </tr>
            </thead>
            <tbody>
                {% for disposicion in datos %}
                    <tr>
                        <td>{{disposicion.nombre}}</td>
                        <td><span class="peso">{{disposicion.cantidad}}</span></td>
                        <td>{{(disposicion.cantidad*100/total)|round(1)}}%</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}