{% include "FrontendBundle:Default:navbar.html.twig" %}

<main class="super-container-grun">
    <div class="container-event-login">
        <div class="event-login">
            <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
                <h2>{{ 'form.new_password'| trans({}, 'FOSUserBundle')| replace({':': ''}) }}</h2>
                
                {% if form_errors(form) %}
                    <h3> 
                        <span class="glyphicon glyphicon-alert"> {{ form_errors(form) }}</span>
                    </h3>
                {% endif %}
                <div class="form-group">
                    {{ form_errors(form.new) }}
                    {{ form_widget(form.new) }}
                </div>
                {{ form_rest(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-submit-login">
                        {{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>
